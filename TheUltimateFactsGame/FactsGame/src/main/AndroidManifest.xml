<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.iamshanedoyle.factsgame" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ie.iamshanedoyle.factsgame.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ie.iamshanedoyle.factsgame.activities.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="ie.iamshanedoyle.factsgame.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="HomeActivity" />
        </activity>
        <activity
            android:name="ie.iamshanedoyle.factsgame.activities.ScoresActivity"
            android:label="@string/title_activity_scores" >
        </activity>
        <activity
            android:name="ie.iamshanedoyle.factsgame.activities.HowToPlayActivity"
            android:label="@string/title_activity_how_to_play" >
        </activity>
    </application>

</manifest>
